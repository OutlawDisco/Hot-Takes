<div class="row">
    <div class="col-md-6">
        <img src="{{poster}}" alt="{{title}}">
    </div>
    <div class="col-md-6">
        <ul>
            <li>{{title}}</li>
            <li>{{plot}}</li>
            <li>{{year}}</li>
            <li>{{Internet.Source}}: {{Internet.Value}}</li>
            <li>{{Rotten.Source}}: {{Rotten.Value}}</li>
            <li>{{Metacritic.Source}}: {{Metacritic.Value}}</li>
        </ul>
    </div>
    <div class="col-md-12">
     <form  class="" action="/api/review" method="post">
      <label class="search-label" for="review">HOT RATE</label>
      <input type="number" id="rating" name="rating" min="1" max="10"/>
      <label class="search-label" for="review">Add a HotTake</label>
      <textarea name="take" id="review" cols="30" rows="10"></textarea>
      <input type="hidden" name="imdbID" value="{{imdbID}}"/>

      <button type="submit" class="btn">SEND IT</button>
     </form>
    </div>
</div>