
<div class="row">
  <div class="col-md-3 ms-3">
    <h1 id="title">{{title}}</h1>
    <h5 class="hot-rating"><b>Hot Rate:</b> {{hotTakesAvg}}/10</h5>
    <img src="{{poster}}" alt="{{title}}" />
  </div>
  <div class="col-md-5 align-self-center movie-info">
    <div>
    </div>
    <ul>
        <li><b>Released:</b> {{year}}</li>
        <li><b>Plot:</b> {{plot}}</li>
    </ul>
    <ul class="row justify-content-start movie-ratings">
      <li class="col ext-rating"><b>IMDB:</b> {{Internet.Value}}</li>
      <li class="col ext-rating"><b>{{Rotten.Source}}:</b> {{Rotten.Value}}</li>
      <li class="col ext-rating"><b>{{Metacritic.Source}}:</b> {{Metacritic.Value}}</li>
    </ul>
  </div>
  <div class="col-md-8 ms-3 form-floating">
    {{#if loggedIn}}
    {{#if noReview}}
      <form class="" name="review" action="/api/review" method="post">
        <label for="rating" class="control-label">Heat Rating</label>
        <input id="rating" name="rating" class="rating rating-loading" data-show-clear="false" data-show-caption="true" data-min="0" data-max="10" data-step="1">
        <textarea
          class="form-control review-input"
          name="take"
          id="review"
          placeholder="Add a Hot Take"
          id="floatingTextarea2"
          style="height: 100px"
        ></textarea>
        <label class="search-label" for="review"></label>
        <input type="hidden" name="imdbID" value="{{imdbID}}" />

        <button type="submit" class="btn">SEND IT</button>
      </form>
      {{/if}}
    {{/if}}
    

  </div>
  <div>
    <br>
  </div>
  <section class="row ms-3 prev-reviews">
    {{#each prevReviews as |review|}}
    {{> review-details}}
    {{/each}}
  </section>
</div>

