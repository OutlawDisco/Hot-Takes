<div class="row">
  <div class="col-md-3 ms-3">
    <h1>{{title}}</h1>
    <img src="{{poster}}" alt="{{title}}" />
  </div>
  <div class="col-md-5 align-self-center">
    <ul class="movie-info">
      <li>Plot: {{plot}}</li>
      <li>Released: {{year}}</li>
    </ul>
    <ul class="row justify-content-start movie-ratings">
      <li class="col">IMDB: {{Internet.Value}}</li>
      <li class="col">{{Rotten.Source}}: {{Rotten.Value}}</li>
      <li class="col">{{Metacritic.Source}}: {{Metacritic.Value}}</li>
    </ul>
  </div>
  <div class="col-md-8 ms-3 form-floating">
    {{#if loggedIn}}
    {{#if noReview}}
      <form class="" action="/api/review" method="post">
        <label for="customRange3" class="search-label" for="review">Hot Rate</label>
        <input
          type="range"
          id="rating"
          name="rating"
          class="form-range"
          min="1"
          max="10"
          step="0.5"
          id="customRange3"
        />
        <textarea
          class="form-control"
          name="take"
          id="review"
          placeholder="Add a Hot Take"
          id="floatingTextarea2"
          style="height: 100px"
        ></textarea>
        <label class="search-label" for="review"></label>
        <input type="hidden" name="imdbID" value="{{imdbID}}" />

        <button type="submit" class="btn">SEND IT</button>
      </form>
      {{/if}}
    {{/if}}
  </div>
  <div>
    <br>
  </div>
  <section class="row ms-3 prev-reviews">
    {{#each prevReviews as |review|}}
    {{> review-details}}
    {{/each}}
  </section>
</div>
